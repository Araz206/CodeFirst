@model AlumnoMVC.Models.Alumno

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>¿Estás seguro de que quieres eliminar esto?</h4>
                </div>
                <div class="card-body">
                    <p>
                        <strong>Alumno</strong>
                    </p>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Codigo)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Codigo)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Direccion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Direccion)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.FechaNacimiento)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FechaNacimiento)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.YearEstudio)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.YearEstudio)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>